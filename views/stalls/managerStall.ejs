<%- include("../partials/header.ejs") -%>


<div class="container ">
    <div class="row">
        <%allStall.forEach(stall => {%>
        <div class="col-sm-6 col-lg-3 ">
            <a href="/stalls/<%= stall._id %>">
                <div class="card">
                    <img class="card-img-top" src="<%= stall.image %>" alt="<%= stall.name %>">
                    <div class="card-body">
                        <h4 class="card-title">
                            <p><%= stall.name %>
                        </h4>
                    </div>
                </div>
            </a>
        </div>
        <% });
    %>
    </div>
</div>
<div class="container">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Tên sản phẩm</th>
                <th scope="col">Ảnh</th>
                <th scope="col">Tùy chỉnh</th>
            </tr>
        </thead>
        <tbody>
            <% let i=1; %>
            <%allStall.forEach(stall => {%>
            <tr>
                <th scope="row"><%= i %> </th>
                <td><%= stall.name %></td>
                <td><img class="" src="<%= stall.image %>" alt="<%= stall.name %>" width="100px"></td>
            </tr>
            <% i++; %>
            <% });
        %>
        </tbody>
    </table>
</div>

<%- include("../partials/footer.ejs") -%>